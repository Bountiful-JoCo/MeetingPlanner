@page
@model MeetingPlanner.Pages.Meetings.IndexModel

@{
    ViewData["Title"] = "All Speakers";
}

<h2>All Speakers</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-SortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Meeting[0].SpeechDate)
                </a>
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Speaker1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Speaker2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Speaker3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Speaker4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Speaker5)
            </th>
          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meeting) {
        <tr>
            <td>

                <a asp-page="/Meetings/Details" asp-route-id="@item.ID">
                    @Html.DisplayFor(modelItem => item.SpeechDate)
                </a>
</td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Speaker1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker5)
            </td>
           
  
        </tr>
}
    </tbody>
</table>
