@page
@model MeetingPlanner.Pages.Meetings.IndexModel

@{
    ViewData["Title"] = "All Topics";
}

<h2>All Topics</h2>


<table class="table">
    <thead>
        <tr>
           
            <th>
                <a asp-page="./Index" asp-route-SortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Meeting[0].SpeechDate)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Topic)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meeting) {
        <tr>
            
            <td>
                <a asp-page="/Meetings/Details" asp-route-id="@item.ID"> @Html.DisplayFor(modelItem => item.SpeechDate)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
         
        </tr>
}
    </tbody>
</table>
